{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "resourceGroup":{
            "type": "string",
            "metadata": {
                "description": "The name of the  Cluster resourcegroup."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location of AKS resource."
            }
        },
        "dnsPrefix": {
            "type": "string",
            "metadata": {
                "description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
            }
        },
        "osDiskSizeGB": {
            "type": "string",
            "defaultValue": "0",
            "metadata": {
                "description": "Disk size (in GiB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            }
        },
        "agentCount": {
            "type": "string",
            "defaultValue": "3",
            "metadata": {
                "description": "The number of agent nodes for the cluster."
            }
        },
        "minAgentCount": {
            "type": "string",
            "defaultValue": "1",
            "metadata": {
                "description": "The number of min agent nodes for the cluster."
            }
        },
        "maxAgentCount": {
            "type": "string",
            "defaultValue": "10", 
            "metadata": {
                "description": "The number of max agent nodes for the cluster."
            }
        },
        "agentVMSize": {
            "type": "string",
            "defaultValue": "Standard_D2_v2",
            "metadata": {
                "description": "The size of the Virtual Machine."
            }
        },
        "servicePrincipalClientId": {
            "metadata": {
                "description": "Client ID (used by cloudprovider)."
            },
            "type": "securestring"
        },
        "servicePrincipalClientSecret": {
            "metadata": {
                "description": "The Service Principal Client Secret."
            },
            "type": "securestring"
        },
        "osType": {
            "type": "string",
            "defaultValue": "Linux",
            "allowedValues": [
                "Linux"
            ],
            "metadata": {
                "description": "The type of operating system."
            }
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.7.7",
            "metadata": {
                "description": "The version of Kubernetes."
            }
        },
        "networkPlugin": {
            "type": "string",
            "allowedValues": [
                "azure",
                "kubenet"
            ],
            "metadata": {
                "description": "Network plugin used for building Kubernetes network."
            }
        },
        "maxPods": {
            "type": "string",
            "defaultValue": "30",
            "metadata": {
                "description": "Maximum number of pods that can run on a node."
            }
        },
        "enableAutoScaling":{
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
            "metadata": {
                "description": "Boolean flag to turn on and off of AutoScaling."
            }
        },
        "enableRBAC": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
        "metadata": {
                "description": "Boolean flag to turn on and off of RBAC."
            }
        },
        "vmssNodePool": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
            "metadata": {
                "description": "Boolean flag to turn on and off of VM scale sets"
            }
        },
        "windowsProfile": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
            "metadata": {
                "description": "Boolean flag to turn on and off of VM scale sets"
            }
        },
        "enableHttpApplicationRouting": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
            "metadata": {
                "description": "Boolean flag to turn on and off of http application routing."
            }
        },
        "enableOmsAgent": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
               "metadata": {
                "description": "Boolean flag to turn on and off of omsagent addon."
            }
        },
        "enablePrivateCluster":{
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ],"defaultValue": "true",
            "metadata": {
                "description": "Boolean flag to turn on and off of Private Cluster feature."
            }
        },
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "The objectId of service principal."
            }
        },
        "vnetSubnetID": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of virtual network subnet used for nodes and/or pods IP assignment."
            }
        },
        "serviceCidr": {
            "type": "string",
            "metadata": {
                "description": "A CIDR notation IP range from which to assign service cluster IPs."
            }
        },
        "dnsServiceIP": {
            "type": "string",
            "metadata": {
                "description": "Containers DNS server IP address."
            }
        },
        "dockerBridgeCidr": {
            "type": "string",
            "metadata": {
                "description": "A CIDR notation IP for Docker bridge."
            }
        },
        "owner": {
            "type" : "string",
            "metadata":{
                "description": "Name of the owner for tags"
            }
        },
        "environment" : {
            "type" : "string",
            "metadata": {
                "description": "Name of the environment for tags"
            }
        } 
    },
    "variables": {
        "vnetName": "[split(parameters('vnetSubnetID'),'/')[8]]",
        "subnetName": "[split(parameters('vnetSubnetID'),'/')[10]]",
        "vnetResourceGroup" : "[split(parameters('vnetSubnetID'),'/')[4]]",
        "vnetResourceGroupId" : "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',split(parameters('vnetSubnetID'),'/')[4])]"
    },
    "resources": [
        {
            "apiVersion": "2020-01-01",
            "type": "Microsoft.ContainerService/managedClusters",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'ClusterSubnetRoleAssignmentDeployment')]"
            ],
            "location": "[parameters('location')]",
            "name": "[parameters('resourceName')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "enableRBAC": "[bool(parameters('enableRBAC'))]",
                "dnsPrefix": "[parameters('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": "[int(parameters('osDiskSizeGB'))]",
                        "count": "[int(parameters('agentCount'))]",
                        "minCount": "[int(parameters('minAgentCount'))]",
                        "maxCount": "[int(parameters('maxAgentCount'))]",
                        "enableAutoScaling": "[bool(parameters('enableAutoScaling'))]",
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "[parameters('osType')]",
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "vnetSubnetID": "[parameters('vnetSubnetID')]"
                    }
                ],
                "apiServerAccessProfile":{
                    "enablePrivateCluster":"[bool(parameters('enablePrivateCluster'))]"
                },
                "servicePrincipalProfile": {
                    "ClientId": "[parameters('servicePrincipalClientId')]",
                    "Secret": "[parameters('servicePrincipalClientSecret')]"
                },
                "networkProfile": {
                    "loadBalancerSku": "standard",
                    "networkPlugin": "[parameters('networkPlugin')]",
                    "serviceCidr": "[parameters('serviceCidr')]",
                    "dnsServiceIP": "[parameters('dnsServiceIP')]",
                    "dockerBridgeCidr": "[parameters('dockerBridgeCidr')]",
                    "outboundType":  "userDefinedRouting"
                },
                "addonProfiles": {
                    "httpApplicationRouting": {
                        "enabled": "[bool(parameters('enableHttpApplicationRouting'))]"
                    }
                }
            },
            "tags": {
                "environment": "[parameters('environment')]",
                "owner": "[parameters('owner')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "ClusterSubnetRoleAssignmentDeployment",
            "apiVersion": "2017-05-10",
            "subscriptionId": "[subscription().subscriptionId]",
            "resourceGroup": "[variables('vnetResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets/providers/roleAssignments",
                            "apiVersion": "2017-05-01",
                            "name": "[concat(variables('vnetName'), '/', variables('subnetName'), '/Microsoft.Authorization/', guid(resourceGroup().id, deployment().name))]",
                            "properties": {
                                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '4d97b98b-1d4f-4787-a291-c67834d212e7')]",
                                "principalId": "[parameters('principalId')]",
                                "scope": "[parameters('vnetSubnetID')]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}